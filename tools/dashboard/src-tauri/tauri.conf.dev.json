{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "RGBW Dashboard",
	"version": "0.1.0",
	"identifier": "com.rgbw-lighting.dashboard",
	"build": {
		"beforeDevCommand": "pnpm run dev",
		"devUrl": "http://localhost:5173",
		"beforeBuildCommand": "pnpm run build",
		"frontendDist": "../build"
	},
	"app": {
		"withGlobalTauri": true,
		"windows": [
			{
				"title": "RGBW Lighting Dashboard",
				"width": 1200,
				"height": 800,
				"minWidth": 900,
				"minHeight": 600,
				"resizable": true,
				"fullscreen": false
			}
		],
		"security": {
			"csp": "default-src 'self' asset:; script-src 'self' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' asset: data: blob:; font-src 'self' data:; connect-src 'self' http://localhost:5173 ws://localhost:5173"
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		]
	},
	"plugins": {}
}
